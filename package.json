{
  "name": "advanced-react",
  "version": "1.0.0",
  "description": "Advanced React",
  "main": "lib/server.js",
  "repository": "https://github.com/khpatel4991/advanced-react",
  "author": "Kashyap Patel",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_PATH=./lib pm2 start lib/server.js --interpreter babel-node --watch --name devProd",
    "webpack": "webpack -wd",
    "test": "jest --watch",
    "verify-tests": "jest --coverage",
    "build-webpack": "webpack -p",
    "build-node": "babel lib -d build --copy-files",
    "start:prod": "NODE_ENV=production NODE_PATH=./build pm2 start build/server.js -i max --name appProd"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.1.0",
    "eslint-plugin-react": "^7.10.0",
    "jest": "^23.4.1",
    "react-test-renderer": "^16.4.1",
    "webpack-cli": "^3.0.8"
  },
  "dependencies": {
    "@babel/cli": "^7.0.0-beta.53",
    "@babel/core": "^7.0.0-beta.53",
    "@babel/node": "^7.0.0-beta.53",
    "@babel/polyfill": "^7.0.0-beta.53",
    "@babel/preset-env": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.0.0-beta.53",
    "@babel/preset-stage-2": "^7.0.0-beta.53",
    "axios": "^0.18.0",
    "babel-core": "^7.0.0-0",
    "babel-loader": "^8.0.0-beta.4",
    "cors": "^2.8.4",
    "ejs": "^2.6.1",
    "fastify": "^2.0.0",
    "fastify-helmet": "^1.0.3",
    "fastify-response-time": "^1.0.4",
    "fastify-static": "^0.12.0",
    "lodash": "^4.17.10",
    "lodash.debounce": "^4.0.8",
    "pm2": "^3.0.0",
    "point-of-view": "^1.1.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "webpack": "^4.16.0"
  },
  "jest": {
    "modulePaths": [
      "lib"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  }
}
